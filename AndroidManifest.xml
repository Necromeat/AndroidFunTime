<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kla.shopinator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
     The following two permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- so openGL will work -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kla.shopinator.LoadPage"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kla.shopinator.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.kla.shopinator.ShoppingList"
            android:label="@string/title_activity_shopping_list"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.kla.shopinator.TextService"
            android:label="@string/title_activity_text_service"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.kla.shopinator.ScanProduct"
            android:label="@string/title_activity_scan_product"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="com.kla.shopinator.FindStore"
            android:label="@string/title_activity_find_store"
            android:theme="@android:style/Theme.Holo" >
        </activity>

        <!-- need for maps to work with google sdk -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyA_FOT3QIZoUOe8J8BOr5p0Fy-peD5tDLM" />

        <activity
            android:name="com.kla.shopinator.ViewShoppingLists"
            android:label="@string/title_activity_view_shopping_lists"
            android:theme="@android:style/Theme.Holo" >
        </activity>
    </application>

</manifest>
